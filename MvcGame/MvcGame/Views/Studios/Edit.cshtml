@model MvcGame.Models.Studio

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Studio</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Edit" class="studio-form border rounded p-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label futuristic-text">Studio Name</label>
                    <input asp-for="Name" class="form-control futuristic-input" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label futuristic-text">Description</label>
                    <input asp-for="Description" class="form-control futuristic-input" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ReleaseDate" class="control-label futuristic-text">Release Date</label>
                    <input asp-for="ReleaseDate" class="form-control futuristic-input" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block futuristic-button">Save Studio</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>
