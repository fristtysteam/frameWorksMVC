@model MvcGame.Models.Studio

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Studio</h1>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Delete Studio</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-2">Release Date</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ReleaseDate)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
