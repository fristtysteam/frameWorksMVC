@model IEnumerable<MvcGame.Models.Studio>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mt-5">Studios Index</h1>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-primary btn-lg btn-block">Create New Studio</a>
        </div>
        <div class="col-md-6">
            <form asp-controller="Studios" asp-action="Index" method="get">
                <div class="input-group-append">
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Release Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
