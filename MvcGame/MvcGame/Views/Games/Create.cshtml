@model MvcGame.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-5">Create New Game</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Create" class="game-form border rounded p-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label futuristic-text">Game Title</label>
                    <input asp-for="Title" class="form-control futuristic-input" placeholder="Enter Game Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label futuristic-text">Description</label>
                    <textarea asp-for="Description" class="form-control futuristic-input" placeholder="Enter Game Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Genre" class="control-label futuristic-text">Genre</label>
                    <input asp-for="Genre" class="form-control futuristic-input" placeholder="Enter Game Genre" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label futuristic-text">Price</label>
                    <input asp-for="Price" class="form-control futuristic-input" placeholder="Enter Game Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ReleaseDate" class="control-label futuristic-text">Release Date</label>
                    <input asp-for="ReleaseDate" class="form-control futuristic-input" placeholder="Enter Release Date" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Rating" class="control-label futuristic-text">Rating</label>
                    <input asp-for="Rating" class="form-control futuristic-input" placeholder="Enter Game Rating" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block futuristic-button">Create Game</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
     
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
