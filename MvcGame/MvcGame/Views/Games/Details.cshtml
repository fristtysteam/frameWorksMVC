@model MvcGame.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Game Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-2">Genre</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Genre)</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-2">Release Date</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ReleaseDate)</dd>

            <dt class="col-sm-2">Rating</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Rating)</dd>
        </dl>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
